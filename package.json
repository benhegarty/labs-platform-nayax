{
  "name": "labs-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "schemas",
    "api",
    "backend/*",
    "libs/*",
    "core-source/*"
  ],
  "scripts": {
    "postinstall": "patch-package --patch-dir ./core-source/serverless/patches",
    "dev:be": "cd ./core-source/devserver && tsx watch devserver.ts",
    "deploy:sls": "cd ./core-source/serverless && npm run deploy",
    "build:core": "cd ./core-source/build && npm run build",
    "core:source": "cd ./core-source/build && npm run -s use-source && cd - && npm install",
    "core:dist": "cd ./core-source/build && npm run -s use-dist && cd - && npm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.0"
  }
}